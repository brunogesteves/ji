{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "lib": ["es6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "removeComments": true,
    "typeRoots": ["src/Utils"],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "baseUrl": ".",
    "declaration": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "__tests__/*.ts"]
}
