{
  "version": 2,
  "public": false,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "/backend/server.js", "use": "@now/node-server" }
  ],
  "routes": [
    { "src": "/backend/.*", "dest": "/backend/server.js" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
