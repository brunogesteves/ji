{
  "version": 2,
  "public": false,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "/server/src/index.js", "use": "@now/node-server" }
  ],
  "routes": [
    { "src": "/server/.*", "dest": "/server/src/index.js" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
